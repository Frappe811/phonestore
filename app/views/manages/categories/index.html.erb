<div class="manage-index">
  <div class="tools col-md-12">
    <div class="navigate-button col-md-2">
      <%= link_to 'Add new Brand', new_manages_category_path %>
    </div>
  </div>
  <div class="tables">
    <table class="table table-bordered table-striped">
      <thead>
      <tr>
        <th>Brand Name</th>
        <th>Date Created</th>
        <th>Date Modifed</th>
        <th>Visible</th>
        <th colspan="1">Action</th>
      </tr>
      </thead>
      <tbody>
      <% @categories.each do |category| %>
          <tr>
            <td><%= category.brand_name %></td>
            <td><%= category.created_at %></td>
            <td><%= category.updated_at %></td>
            <th><%= category.flag %></th>
            <td><%= link_to 'Update', edit_manages_category_path(category) %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="pagination-container hidden-xs pull-right">
    <nav>
      <%= paginate @categories, :window => 2, theme: 'large' %>
    </nav>
  </div>
  <div class="pagination-container visible-xs text-center">
    <%= paginate @categories, :window => 2, theme: 'normal' %>
  </div>
</div>